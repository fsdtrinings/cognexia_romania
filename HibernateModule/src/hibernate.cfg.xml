<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
                                        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hcl</property>
		
		<property name="hibernate.connection.username">root</property>
		
		<property name="hibernate.connection.password">admin</property>
		
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
		
		<property name="show_sql">true</property>
		
		<property name="hibernate.hbm2ddl.auto">create</property>
		
		
		<property name="cache.use_second-level_cache">true</property>
		<property name="cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
		
		
		
		<mapping class="p1.Employee"/>	
		<mapping class="p1.Address"/>	
		<mapping class="p1.EmployeeDependent"/>	
		<mapping class="p1.WorkStation"/>	
		<mapping class="p1.Project"/>	
		
		
		
		
		
			
	

	</session-factory>
</hibernate-configuration>